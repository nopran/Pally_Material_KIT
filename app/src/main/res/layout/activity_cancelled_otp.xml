<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/pallylogo" />

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="82dp"
            android:gravity="center"
            android:text="Mobile Verification"
            android:textColor="#6f6f6f"
            android:textSize="16sp" />

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="OTP has been sent on youe mobile number"
            android:textColor="#6f6f6f" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="+91 - 9429283901"
                android:textColor="#06A8B2" />

            <ImageView
                android:layout_width="13.5dp"
                android:layout_height="13.5dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_edit"
                android:tint="#056f79" />

        </LinearLayout>


        <com.mukesh.OtpView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#000"></com.mukesh.OtpView>


        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If yopu still don't get verification code in next 5 minute"
            android:layout_gravity="center_horizontal"
            android:textColor="#db2212"
            android:layout_marginTop="30dp"
            android:textSize="13dp" />
        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We suggest you to try again after some time,"
            android:layout_gravity="center_horizontal"
            android:textColor="#db2212"
            android:layout_marginTop="2dp"
            android:textSize="13dp" />
        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We regret the inconvenience caused."
            android:layout_gravity="center_horizontal"
            android:textColor="#db2212"
            android:layout_marginTop="2dp"
            android:textSize="13dp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/round_corner"
        android:gravity="center">

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Next"
            android:textColor="#fff" />

    </LinearLayout>


</RelativeLayout>
